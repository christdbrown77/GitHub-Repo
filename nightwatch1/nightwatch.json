
{
    "src_folders": [
      "tests"
    ],
    "output_folder": "reports",
    "selenium": {
      "start_process": true,
      "server_path": "./bin/selenium-server-standalone-3.141.59.jar",
      "log_path": "",
      "port": 4444,
      "cli_args": {
        "webdriver.chrome.driver": "./bin/chromedriver.exe",
        "webdriver.gecko.driver": "./bin/geckodriver.exe"
      }
    },
    "test_workers": {
      "enabled": true,
      "workers": "auto"
    },
    "test_settings": {
      "default": {
        "launch_url": "http://localhost",
        "selenium_port": 4444,
        "selenium_host": "localhost",
        "silent": true,
        "screenshots": {
          "enabled": false,
          "path": ""
        },
          "desiredCapabilities": {
            "browserName": "chrome"
          }
        },
      "firefox": {
        "desiredCapabilities": {
          "browserName": "firefox",
          "marionette": true
        }
      },
      "opera": {
        "desiredCapabilities": {
          "browserName": "opera"
        }
      }
    }
  }